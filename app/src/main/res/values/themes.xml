<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Justagg" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/montserrat_reg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/bottomSheetStyle</item>
        <item name="materialButtonStyle">@style/materialButtonStyle</item>
        <item name="toolbarStyle">@style/materialToolbar</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/grey_50</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
    </style>

    <style name="materialToolbar"
        parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/materialToolbarTitle</item>
    </style>

    <style name="materialToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="materialButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="bottomSheetStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>